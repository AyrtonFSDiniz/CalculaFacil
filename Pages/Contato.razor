@page "/contato"
@using MudBlazor
@inject NavigationManager _navigation

<MudContainer MaxWidth="MaxWidth.Medium" Class="my-8">
    <!-- Título da Página -->
    <MudText Typo="Typo.h3" Class="mb-4" GutterBottom="true">Entre em Contato Conosco</MudText>

    <!-- Descrição -->
    <MudText Typo="Typo.body1" Class="mb-4">
        Tem alguma dúvida, sugestão ou precisa de ajuda? Preencha o formulário abaixo ou utilize um dos nossos canais de contato. Responderemos o mais rápido possível!
    </MudText>

    <!-- Formulário de Contato -->
    <MudForm @ref="form" Class="mb-4">
        <MudTextField Label="Seu Nome" @bind-Value="Nome" Required="true" RequiredError="Por favor, insira seu nome." />
        <MudTextField Label="Seu E-mail" @bind-Value="Email" Required="true" RequiredError="Por favor, insira um e-mail válido." />
        <MudTextField Label="Assunto" @bind-Value="Assunto" Required="true" RequiredError="Por favor, insira um assunto." />
        <MudTextField Label="Mensagem" @bind-Value="Mensagem" Lines="5" Variant="Variant.Outlined" Required="true" RequiredError="Por favor, insira sua mensagem." />
        
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-4" OnClick="EnviarMensagem">
            Enviar Mensagem
        </MudButton>
    </MudForm>

    <!-- Canais de Contato -->
    <MudText Typo="Typo.h5" Class="mt-6 mb-2" GutterBottom="true">Outros Canais de Contato</MudText>
    <MudList T="string">
        <MudListItem>
            <MudIcon Icon="@Icons.Material.Filled.Email" Color="Color.Primary" Class="mr-2" />
            <MudText Typo="Typo.body1">E-mail: contato@seusite.com</MudText>
        </MudListItem>
        <MudListItem>
            <MudIcon Icon="@Icons.Material.Filled.Phone" Color="Color.Primary" Class="mr-2" />
            <MudText Typo="Typo.body1">Telefone: (11) 1234-5678</MudText>
        </MudListItem>
        <MudListItem>
            <MudIcon Icon="@Icons.Material.Filled.LocationOn" Color="Color.Primary" Class="mr-2" />
            <MudText Typo="Typo.body1">Endereço: Rua Exemplo, 123 - São Paulo, SP</MudText>
        </MudListItem>
    </MudList>
</MudContainer>

@code {
    private MudForm form = new();
    private string Nome = string.Empty;
    private string Email = string.Empty;
    private string Assunto = string.Empty;
    private string Mensagem = string.Empty;

    private async Task EnviarMensagem()
    {
        await form.Validate();
        if (form.IsValid)
        {
            // Lógica para enviar a mensagem (ex.: API, e-mail, etc.)
            _snackbar.Add("Mensagem enviada com sucesso!", Severity.Success);

            // Limpar o formulário
            Nome = string.Empty;
            Email = string.Empty;
            Assunto = string.Empty;
            Mensagem = string.Empty;

            // Feedback para o usuário
            _navigation.NavigateTo("/");
        }
    }
}