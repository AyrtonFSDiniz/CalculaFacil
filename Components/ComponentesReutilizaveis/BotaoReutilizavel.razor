@using MudBlazor

<MudButton OnClick="@OnClick" Variant="@Variant" Color="@Color" StartIcon="@StartIcon" Disabled="@Disabled">
    @ChildContent
</MudButton>

@code {
    [Parameter] public EventCallback OnClick { get; set; } // Ação para o clique
    [Parameter] public Variant Variant { get; set; } = Variant.Filled; // Estilo do botão
    [Parameter] public Color Color { get; set; } = Color.Primary; // Cor do botão
    [Parameter] public string StartIcon { get; set; } = string.Empty; // Ícone do botão
    [Parameter] public bool Disabled { get; set; } = false; // Habilitar ou desabilitar o botão
    [Parameter] public RenderFragment? ChildContent { get; set; } // Conteúdo interno do botão
}
